#!/usr/bin/perl
@words=("superman","superdoggy","supergirl");
print "what's your name?";
$name=<STDIN>;
chop($name);
if ($name eq "佀侊侓伌") {
    print "Hello,佀侊侓伌!How good of you to be here!\n";
}else{
    print "Hello,$name!\n"; #伷佌佂仺伝伓佊伃伌伿  
    print "what is the secret word?";
    $guess=<STDIN>;
    chop($guess);
     $i=0; #佅伻伿佋伿佋佌佲伕侖伒仴伌伿
     $correct="maybe"; #伈伮伈佲佌価伻伔佊侂伔侎
     while($correct eq "maybe"){
          if($words[$i] eq $guess){
           $correct="yes"; #伓佋!
          }elsif($i<2){
           $i=$i+1;#伩伌伩伌佅伮佉伝伕侖伒仴伌伿.
          }else{
           print "Wrong,try again.What is the secret word?";
           $guess=<STDIN>;
           chop($guess);
           $i=0;#佒佖佇伮伡侅伈侀,伇侌佂侟伭佀.

          }
    }
}

